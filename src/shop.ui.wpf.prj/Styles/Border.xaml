<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="container" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="#6d6a6a" />
        <Setter Property="BorderBrush" Value="#858385" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="Margin" Value="8" />
    </Style>

    <Style x:Key="container-product" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="#ccc9c9" />
        <Setter Property="BorderBrush" Value="#ffffff" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="Margin" Value="8" />
    </Style>
</ResourceDictionary>