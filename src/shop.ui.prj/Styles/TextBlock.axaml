<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="0"
                Background="Orchid"
                Height="50">
            <TextBlock Text="5555555555555555555" />
        </Border>
    </Design.PreviewWith>

    <Style Selector="TextBlock">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontSize"          Value="{DynamicResource FontSize}" />
        <Setter Property="Padding"           Value="4,7,4,4" />
    </Style>

    <Style Selector="TextBlock.ApplicationName">
        <Setter Property="FontWeight"        Value="SemiBold" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Foreground"        Value="{DynamicResource FullWhite}" />
        <Setter Property="FontSize"          Value="{DynamicResource ApplicationNameFontSize}" />
    </Style>
</Styles>